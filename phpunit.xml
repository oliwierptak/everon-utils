<phpunit
        colors="true"
        stopOnError="true"
        stopOnFailure="true"
        stopOnIncomplete="false"
        stopOnSkipped="false"
        debug="false"
        >

    <filter>
        <whitelist>
            <directory>src</directory>
            <exclude>
                <directory>./vendor</directory>
            </exclude>
        </whitelist>
    </filter>

    <testsuites>
        <testsuite name="Everon Utils Unit Test Suite">
            <directory>./tests/unit/</directory>
        </testsuite>
    </testsuites>

</phpunit>
